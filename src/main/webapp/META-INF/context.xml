<?xml version="1.0" encoding="UTF-8"?>

<Context path="/simple_portal">
	<Resource
	 name="jdbc/simpleportalDS"
	 type="javax.sql.DataSource"
	 username="username"
	 password="password"
	 driverClassName="com.mysql.jdbc.Driver"
	 maxIdle="2"
	 maxWait="5000"
	 validationQuery="SELECT 1"
	 url="jdbc:mysql://127.0.0.1:3306/simpleportal"
	 maxActive="4">
	</Resource>
</Context>